.container
  nav.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        a.navbar-brand href="#{crops_path}" #{image_tag asset_url ("cropswap-logo.png")}
        ul.nav.navbar-nav.navbar-right
          - if current_user
            li = link_to "Post A Crop", new_crop_path, class: "nav-a"
            li = link_to "Browse Crops", crops_path, class: "nav-a"
            li = link_to "My Profile", current_user, class: "nav-a"
            li = link_to "Wishlist", wishlists_path, class: "nav-a"
            .navbar-right.nav-link 
              = link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav-text"
          - else
            .navbar-right.nav-link 
              = link_to "Log In", new_user_session_path, class: "nav-text"
