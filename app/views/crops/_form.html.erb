     <div class="form-group">
       <%= f.label :user_id, "User Id", class: "col-md-4 control-label" %>
       <div class="col-md-8">
         <%= f.number_field :user_id, class: "form-control" %>
       </div>
     </div>
     <div class="form-group">
       <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
       <div class="col-md-8">
         <%= f.text_area :description, class: "form-control" %>
       </div>
     </div>
     <div class="form-group">
       <%= f.label :crop_pic, "Crop Pic:", class: "col-md-4 control-label" %>
       <div class="col-md-8">
         <%= f.file_field :crop_pic, class: "form-control" %>
       </div>
     </div>
     <div class="form-group">
       <%= f.label :weight, "Weight:", class: "col-md-4 control-label" %>
       <div class="col-md-8">
         <%= f.number_field :weight, class: "form-control" %>
       </div>
     </div>

     <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
