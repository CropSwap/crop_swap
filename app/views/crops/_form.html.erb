<main class="container crop-form">

  <%= form_for @crop  do |f| %>
    <% if @crop.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@crop.errors.count, "error") %> prohibited this crop from being saved:</h2>
          <ul>
            <% @crop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
  <body class="backg">

    <h1>Post A Crop</h1>
    <div class="form-group">
      <%= f.label :weight, "Weight:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.number_field :weight, class: "crop-weight form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, class: "crop-description form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :crop_pic, "Crop Pic:", class: "col-md-4 control-label"%> <br>
      <%= f.file_field :crop_pic %>
    </div>
    <div class="form-group">
      <%= f.label :ripe_on, "Ripe On:", class: "col-md-4 control-label"%> <br>
      <%= f.date_field :ripe_on %>
    </div>
    <div class="form-group">
      <%= f.label :expires_on, "Expires On:", class: "col-md-4 control-label"%> <br>
      <%= f.date_field :expires_on %>
    </div>
    <div class="form-group">
      <%= f.label :crop_type_id, "Crop Type:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.collection_select :crop_type_id, CropType.all, :id, :crop_type, class: "form-control" %>
      </div>
    </div>
    <%= f.hidden_field :user_id %>
    <br>
    <h4 class="text-center">What are you willing to trade?</h4>

    <% TradeType.all.each do |t| %>
      <div class="form-group">
        <%= check_box_tag 'trade_types[]', t.id, @crop.trade_types.include?(t) %> <%= t.name %>
      </div>
    <% end %>

    <span><%= f.submit "Submit", class: "crop-button"%></span>

  <% end %>

  </main> <!-- end of main.container -->
</body>
