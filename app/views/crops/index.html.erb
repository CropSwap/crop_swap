<p id="notice"><%= notice %></p>

<h1>Listing Crops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Weight</th>
      <th>Crop Type Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.user_id %></td>
        <td><%= crop.description %></td>
        <td><%= crop.weight %></td>
        <td><%= crop.crop_type_id %></td>
        <td><%= link_to 'Show', crop %></td>
        <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
        <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crop', new_crop_path %>

<div class="container">
  <div class="jumbotron">
    <h1>Search for Local Crops</h1>
    <p>Ditch the supermarket and search for crops in your area. </p>
    <a href="#" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-search"></span> Search</a>
  </div>
</div>
