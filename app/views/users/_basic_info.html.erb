<div class="col-md-3">
  <% if @user.profile_pic.present? %>
    <%= image_tag @user.profile_pic.url %>
  <% else%>
    <%= image_tag asset_url ("default-image.png") %>
  <% end %>
  <h3><%= @user.name %></h3>
  <p><%= @user.zip_code %><br>
  <em>Joined on <%=@user.created_at.strftime("%b %d %Y")%></em></p>
  <p><%= @user.description %></p>
  <p> <%= link_to 'Swap History', trades_path if @user == current_user %></p>
</div>
